{
  "manifest_version": 3,
  "name": "Throttlr",
  "version": "0.0.1",
  "action": {
    "default_title": "Throttlr",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-bridge.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "inpage.js"
      ],
      "world": "MAIN",
      "run_at": "document_start"
    }
  ]
}
